<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
    <record model='ir.ui.view' id = 'fleet_odometer_list_view'>
      <field name= "name">fleet.odometer.tree</field>
      <field name="model">fleet.odometer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="vehicle_id"/>
          <field name="date"/>
          <field name="driver_id"/>
          <field name="odometer_reading"/>
          <field name="reading_unit" readonly="1"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fleet_odometer_form_view">
      <field name="name">fleet.odometer.form</field>
      <field name="model">fleet.odometer</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
	          <field name="vehicle_id"/>
	          <field name="date"/>
	          <field name="driver_id"/>
	          <field name="odometer_reading"/>
	          <field name="reading_unit" readonly="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id = "fleet_odometer_action_window">
      <field name="name"> Odometer </field>
      <field name="res_model">fleet.odometer</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Odometer" id="fleet_cost_menu_child" parent="vehicle_brand_menu_root" action="fleet_odometer_action_window"/>


  </data>
</odoo>
