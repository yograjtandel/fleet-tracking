<?xml version="1.0" encoding="UTF-8"?>

 <odoo>
    <record id='fleet_dashboard_kanban_view' model='ir.ui.view'>
      <field name="name">fleet.dashboard.kanban</field>
      <field name="model">fleet.dashboard</field>
        <field name="arch" type="xml">
            <kanban create="false" class="oe_background_grey o_kanban_dashboard o_account_kanban">
                <!-- <field name="kanban_dashboard_graph" invisible="1"/> -->
                <field name="name"/>
                <templates>
<!--                     <t t-name="kanban-box">
                        <div>
                        <t t-set="dashboard" t-value-="record.kanban_dashboard_graph"/>
                        <t t-esc="dashboard"/>
                      </div>
                    </t> -->
                    <t t-name="kanban-box">
    <!--                 <t t-debug=""/>
                    <t t-esc="sssssssssssssssssssssaaaa"/> -->
                        <!-- <field name="name"/> -->
                      <div>
                        <field name="kanban_dashboard_graph" graph_type="bar" widget="dashboard_graph"/>
                      </div>
                    </t>
            </templates>
            </kanban>
        </field>
    </record>

    <record id="fleet_dashboard_kanban_action_window" model="ir.actions.act_window">
        <field name="name">Contract Overview</field>
        <field name="res_model">fleet.dashboard</field>
        <field name="view_mode">kanban,form</field>
    </record>


    <record id="fleet_dashboard_view_map" model="ir.ui.view">
        <field name="name">fleet.dashboard.view.map</field>
        <field name="model">fleet.dashboard</field>
        <field name="arch" type="xml">
            <map res_partner="partner_id">
                <marker-popup>
                    <field name="name" string="Title "/>
                    <field name="partner_id" string="Customer "/>
                </marker-popup>
            </map>
        </field>
    </record>

    <!-- add map to pipeline action -->
    <record id="fleet_dashboard_map_action" model="ir.actions.act_window">
        <field name="name">Tracking Detail</field>
        <field name="res_model">fleet.dashboard</field>
        <field name="view_mode">map</field>
    </record>


    <menuitem id="dashboard_menu" name="map" action="fleet_dashboard_map_action" parent="fleet_tracking.vehicle_brand_menu_root" sequence="1"/>
</odoo>
